doctype html
html(lang="en").h-full.m-0.p-0
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="/styles/tailwind.css" rel="stylesheet")
        link(href="/styles/root.css" rel="stylesheet")
        title #{title}
    body.h-full.flex.flex-col.m-0.p-0.bg-gradient-to-r.from-zinc-950.to-zinc-800.text-zinc-400
        .container.flex-grow.p-20.mx-auto
            .flex.flex-row.flex-wrap
                aside.pr-2.w-full.md--w-1-3.lg--w-1-6
                    include navigation
                main(role="main").w-full.bg-zinc-900.p-10.rounded-xl.c-shadow.md--w-2-3.lg--w-5-6
                    block content
        footer.fixed.bottom-0.w-full
            include footer
        script(src="/js/p5.min.js")
        script(src="/js/sketch.js")
doctype html
html(lang="en").h-full.m-0.p-0.overscroll-none
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="/styles/tailwind.css" rel="stylesheet")
        link(href="/styles/root.css" rel="stylesheet")
        title #{title}
    body.h-full.flex.flex-col.m-0.p-0.bg-gradient-to-r.from-zinc-950.to-zinc-800.text-zinc-400.overscroll-none
        .container.flex-grow.mx-auto.p-10.xl--p-20
            .flex.flex-col.xl--flex-row
                aside.pb-4.xl--pb-0.xl--pr-2.w-48.xl--max-w-48.xl--min-w-48.w-full
                    include navigation
                main(role="main").bg-zinc-900.p-10.rounded-xl.border.border-zinc-800.w-auto
                    block content
        footer.fixed.bottom-0.w-full.shadow-top
            include footer
        script(src="/js/p5.min.js")
        script(src="/js/sketch.js")
        script(src="/js/navigation.js")